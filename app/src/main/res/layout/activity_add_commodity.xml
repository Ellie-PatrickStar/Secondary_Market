<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_publish_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="我想卖"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_add_photo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/et_price"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="添加照片:"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/iv_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tv_add_photo"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/add" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_publish_info"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="宝贝名称："
        android:textStyle="bold"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_publish_info"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:hint="请输入标题"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_title"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="宝贝描述:"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_title"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:hint="入手渠道，几成新，是否磨损等"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/et_description"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="宝贝定价:"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_description"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:hint="请输入定价"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_publish_info"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="发布"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_publish_info"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="返回"
        android:textColor="@color/black"
        android:textSize="22sp" />
</RelativeLayout>